<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/vBtnMoveActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOVE NEXT ACTIVITY"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="406dp"
        app:layout_constraintTop_toTopOf="@+id/vSwitchAlarm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Switch
        android:id="@+id/vSwitchAlarm"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginTop="72dp"
        android:text="Alarm On/Off"
        android:textSize="24sp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/vEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Name"

        />

    <Button
        android:id="@+id/vBtnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        app:layout_constraintLeft_toRightOf="@+id/vEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>